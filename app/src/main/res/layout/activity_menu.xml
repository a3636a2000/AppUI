<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <ImageView
        android:id="@+id/img_child"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        app:srcCompat="@drawable/childimg" />

    <ImageView
        android:id="@+id/img_recommend"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        app:srcCompat="@drawable/mapimg" />

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@+id/img_recommend"
        app:layout_constraintTop_toBottomOf="@+id/img_recommend"
        app:srcCompat="@drawable/setimg" />

    <ImageView
        android:id="@+id/img_school"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@+id/img_child"
        app:layout_constraintTop_toBottomOf="@+id/img_child"
        app:srcCompat="@drawable/schoolimg" />

    <TextView
        android:id="@+id/tv_child"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="아이의 위치"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_child"
        app:layout_constraintStart_toStartOf="@+id/img_child"
        app:layout_constraintTop_toBottomOf="@+id/img_child" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="여러 시설"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_recommend"
        app:layout_constraintStart_toStartOf="@+id/img_recommend"
        app:layout_constraintTop_toBottomOf="@+id/img_recommend" />

    <TextView
        android:id="@+id/tv_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="유치원\n홈페이지"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_school"
        app:layout_constraintStart_toStartOf="@+id/img_school"
        app:layout_constraintTop_toBottomOf="@+id/img_school" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="설정"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_set"
        app:layout_constraintStart_toStartOf="@+id/img_set"
        app:layout_constraintTop_toBottomOf="@+id/img_set" />
</androidx.constraintlayout.widget.ConstraintLayout>